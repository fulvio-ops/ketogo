---
import Layout from "../layouts/Layout.astro";
import PostCard from "../components/PostCard.astro";
import featured from "../data/featured.json";

const pattern = ["a", "b", "c", "d"];
---

<Layout>
  <section class="pb-10">
    <div class="px-5 pb-4">
      <div class="flex items-center gap-3">
        <div class="h-2 w-2 rounded-full bg-[rgb(var(--accent))]"></div>
        <h2 class="text-xs uppercase tracking-[0.28em] text-[rgb(var(--muted))]">
          Articles
        </h2>
        <div class="h-px flex-1 bg-[rgb(var(--stroke))]"></div>
      </div>
    </div>

    <div class="flex flex-col gap-4">
      {featured.articles.map((p, idx) => (
        <PostCard post={p} variant={pattern[idx % pattern.length]} />
      ))}
    </div>
  </section>

  <section class="pb-14">
    <div class="px-5 pb-4">
      <div class="flex items-center gap-3">
        <div class="h-2 w-2 rounded-full bg-[rgb(var(--accent))]"></div>
        <h2 class="text-xs uppercase tracking-[0.28em] text-[rgb(var(--muted))]">
          Bizarre stuff for sale
        </h2>
        <div class="h-px flex-1 bg-[rgb(var(--stroke))]"></div>
      </div>
    </div>

    <div class="flex flex-col gap-4">
      {featured.oddities.map((p, idx) => (
        <PostCard post={p} variant={pattern[idx % pattern.length]} />
      ))}
    </div>
  </section>
</Layout>
