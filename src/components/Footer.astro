    <div class="h-px w-full bg-[rgb(var(--stroke))]"></div>

    <p class="mt-6">
      Generated: <span class="text-[rgb(var(--fg))]">{generatedAt}</span>
    </p>

    <p class="mt-2">
      Sources: {subreddits.map((s, i) => (
        <span>{i ? ", " : ""}r/{s}</span>
      ))}
    </p>

